{
  "manifest_version": 3,
  "name": "LinkCore Download Helper",
  "version": "0.1.0",
  "description": "Send browser downloads to LinkCore Download Manager via aria2 RPC",
  "permissions": [
    "downloads",
    "storage",
    "contextMenus",
    "cookies"
  ],
  "host_permissions": [
    "http://127.0.0.1/*",
    "http://127.0.0.1:16900/*",
    "http://localhost/*",
    "http://localhost:16900/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "LinkCore Helper",
    "default_popup": "popup.html"
  }
}
